<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>#{title}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <style>
            body{
                font-family: 'Balsamiq Sans', cursive;
                margin:0px;
                padding:0px;
                background: url('img/bg.png');
                /*background-repeat: no-repeat;*/
                background-size: cover;
                color: white;
            }
            .left{
                /*border: 2px solid red;*/
                display: inline-block;
                position: absolute;
                left: 34px;
                top: 20px;
                padding: 5px;
            }
            .mid{
                display: block;
                width: 49%;
                margin: 20px auto;
                /*border: 2px solid green;*/
            }
            .right{
                /*border: 2px solid yellow;*/
                display: inline-block;
                position: absolute;
                right: 34px;
                top: 20px;
            }
            navbar{
                display: inline-block;
            }
            .navbar li{
                display: inline-block;
                font-size:24px;
                font-weight: bold;
            }
            .navbar li a{
                color: white;
                text-decoration: none;
                padding: 34px 17px;    
            }
            .navbar li a:hover,.navbar li a.active{
                text-decoration: underline;
                color: grey;   
            }
            .left img{
                width: 60px;
                filter: invert(100%);
                padding-left: 16px;
            }
            .left div{
                text-align: center;
                line-height: 3px;
                /*color: white;*/
                /*background-color: black;*/
                font-size: 16px;
            }
            .btn{
                margin: 0px 9px;
                background-color: black;
                color: white;
                padding: 3px 4px;
                border: 2px solid grey;
                border-radius: 15px;
                font-size: 15px;
                cursor: pointer;
                font-family: 'Balsamiq Sans', cursive;
            }
            .btn:hover{
                background-color: grey;
            }
            .container{
                 border: 2px solid white;
                 margin: 106px 830px;
                 padding: 75px;
                 width: 33%;
                 border-radius: 28px
            }
            .form-group input{
                 font-family: 'Balsamiq Sans', cursive;
                 text-align: center;
                 width: 413px;
                 padding: 1px;
                 border: 2px solid black;
                 margin: 6px auto;
                 display: block;
                 font-size: 20px;
                 border-radius: 8px;
            }
            .container h1{
                text-align: center;
                margin-bottom: 72px;
            }
            .container button{
                display: block;
                width: 24%;
                margin: 24px auto;
                border-color: white;
                padding: 6px;
                border-radius: 6px;
            }
            <link href="https://fonts.googleapis.com/css2?family=Balsamiq+Sans:wght@700&display=swap" rel="stylesheet">
        </style>
    </head>
    <body> 
        <header class="header">
            <!-- left box for logo -->
            <div class="left">
                <img src="img/logo.png" alt="">
                <div>Diamond Gym</div>
            </div>
            <!-- mid box for navbar -->
            <div class="mid">
                <ul class="navbar">
                <li><a href="#">Home</a></li>
                <li><a href="#">About Us</a></li>
                <li><a href="#">Fitness Services</a></li>
                <li><a href="#">Contact Us</a></li>
                </ul>
            </div>
            <!-- Right box for buttons -->
            <div class="right">
                <button class="btn">Call Us Now</button>
                <button class="btn">Email Us</button>
            </div>
            <div class="container">
                <h1>Join the best Gym of Jaipur now</h1> 
                <form action="/" method="POST" id="Contact"></form>     
                <div class="form-group">
                    <input type="text" name="name" placeholder="Enter your name">
                </div>
                <div class="form-group">
                    <input type="number" name="age" placeholder="Enter your age">
                </div>
                <div class="form-group">
                    <input type="text" name="gender" placeholder="Enter your gender">
                </div>
                <div class="form-group">
                    <input type="number" name="phone" placeholder="Enter your Mobile No.">
                </div>  
                    <button class="btn">Submit</button>
                </div>
        </header>
    </body>
</html>
